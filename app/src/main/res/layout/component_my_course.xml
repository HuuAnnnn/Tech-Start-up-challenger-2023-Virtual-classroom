<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/myCourseThumbnail"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/myCourseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginVertical="5dp"
        android:text="Title" />

    <TextView
        android:id="@+id/myCourseEducationOrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_marginVertical="5dp"
        android:text="Education Organization" />

    <TextView
        android:id="@+id/myCourseLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="11sp"
        android:text="Professional Certificates" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ttvMyCourseRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_star_24"
            android:drawablePadding="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:gravity="center_vertical"
            android:text="4,9" />

        <TextView
            android:id="@+id/ttvNumberOfRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textStyle="bold"
            android:text="(23k)" />
    </LinearLayout>
</LinearLayout>